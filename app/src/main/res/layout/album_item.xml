<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="lastfm.grishman.com.lastfmapp.model.albums.Album" />

        <variable
            name="viewModel"
            type="lastfm.grishman.com.lastfmapp.model.albums.Album" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{viewModel.name}"
            app:layout_constraintEnd_toStartOf="@id/artist_logo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Kevin Gates" />


        <TextView
            android:id="@+id/artist_listeners"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{viewModel.artist.name}"
            app:layout_constraintTop_toBottomOf="@id/artist_name"
            tools:text="Luca Brasi 3" />

        <!--<ImageView-->
