<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="lastfm.grishman.com.lastfmapp.model.Artist" />

        <variable
            name="viewModel"
            type="lastfm.grishman.com.lastfmapp.model.Artist" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{viewModel.name}"
            app:layout_constraintEnd_toStartOf="@id/artist_logo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Kevin Gates" />


        <TextView
            android:id="@+id/artist_listeners"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{`Listeners: `+viewModel.listeners}"
            app:layout_constraintTop_toBottomOf="@id/artist_name"
            tools:text="666" />

        <ImageView
            android:id="@+id/artist_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_search_black_24dp"
            bind:imageUrl="@{viewModel.avatar}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>